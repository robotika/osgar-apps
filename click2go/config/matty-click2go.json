{
  "version": 2,
  "robot": {
    "modules": {
      "app": {
          "driver": "click2go:Click2Go",
          "in": ["emergency_stop", "pose2d"],
          "out": ["desired_speed"],
          "init": {
            "max_speed": 0.2,
            "timeout": 60
          }
      },
      "platform": {
        "driver": "osgar.platforms.matty:Matty",
        "in": ["esp_data"],
        "out": ["esp_data"],
        "init": {}
      },
      "timer": {
        "driver": "timer",
        "in": [],
        "out": ["tick"],
        "init": {
          "sleep": 0.1
        }
      },
      "serial": {
          "driver": "serial",
          "in": ["raw"],
          "out": ["raw"],
          "init": {"port": "/dev/esp32", "speed": 115200}
      },
      "oak": {
        "driver": "osgar.drivers.oak_camera:OakCamera",
        "init": {
          "fps": 10,
          "is_color": true,
	      "video_encoder": "h265",
          "h264_bitrate": 4000,
          "is_depth": true,
          "is_imu_enabled": true,
          "number_imu_records": 10,
          "disable_magnetometer_fusion": false,
          "mono_resolution": "THE_400_P",
          "color_resolution": "THE_1080_P",
          "color_manual_focus": 130,
          "stereo_median_filter": "KERNEL_3x3",
          "stereo_mode": "HIGH_ACCURACY",
          "stereo_extended_disparity": false,
          "stereo_subpixel": false,
          "stereo_left_right_check": true,
          "sleep_on_start_sec": 5
        }
      },
      "frombase": {
          "driver": "osgar.drivers.pull:Pull",
              "init": {
              "endpoint": "tcp://*:5556",
              "pubsub": true,
              "bind": true,
              "outputs": ["cmd"]
          }
      },
      "tobase": {
          "driver": "osgar.drivers.push:Push",
              "init": {
              "endpoint": "tcp://*:5555",
              "pubsub": true,
              "bind": true
          }
      }
    },
    "links": [
      ["app.desired_steering", "platform.desired_steering"],
      ["platform.pose2d", "app.pose2d"],
      ["serial.raw", "platform.esp_data"],
      ["platform.esp_data", "serial.raw"],
      ["timer.tick", "platform.tick"],

      ["oak.color", "app.color"],
      ["app.pose2dimg", "tobase.pose2dimg"],
      ["frombase.cmd", "app.cmd"]
    ]
  }
}
